{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      },
      "declarationDir": "./dist/types",
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }